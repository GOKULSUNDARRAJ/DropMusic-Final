<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.DropU" parent="Theme.AppCompat.NoActionBar">

        //
        <!-- Customize your light theme here.Theme.MaterialComponents.Light.NoActionBar.Bridge -->
        <item name="colorPrimary">@color/black</item>

        <item name="bottomSheetDialogTheme">
            @style/AppBottomSheetDialogTheme
        </item>
    </style>

    <style name="Theme.DropU" parent="Base.Theme.DropU" />

    <style name="navigationTheme">
        <item name="colorPrimary">@color/black</item>
        <item name="colorControlHighlight">@color/active</item>
    </style>


    <style name="AppBottomSheetDialogTheme"

        parent="Theme.Design.Light.BottomSheetDialog">

        <item name="bottomSheetStyle">@style/AppModelStyle</item>

    </style>

    <!-- bottomSheetStyle-->

    <style name="AppModelStyle"

        parent="Widget.Design.BottomSheet.Modal">

        <item name="android:background">@drawable/roundtextback</item>

    </style>


    <style name="CustomDialogAnimation" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowEnterAnimation">@anim/enter_animation</item>
        <item name="android:windowExitAnimation">@anim/exit_animation</item>
    </style>


    <style name="Theme.App.BottomSheet" parent="Theme.Design.Light">
        <!-- Customize your theme here -->
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:layout_height">match_parent</item>
    </style>

</resources>