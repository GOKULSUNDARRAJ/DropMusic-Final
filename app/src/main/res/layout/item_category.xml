<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_margin="10dp"
    android:id="@+id/categorycard"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/categoryCoverUrlTextView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/categorySongsTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:fontFamily="@font/font123"
        android:maxLines="2"
        android:paddingLeft="7dp"
        android:paddingTop="2dp"
        android:text="Offer ends 31/10"
        android:textColor="@color/white"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/categoryCoverUrlTextView"
        app:layout_constraintStart_toStartOf="@+id/categoryCoverUrlTextView"
        app:layout_constraintTop_toBottomOf="@+id/categoryCoverUrlTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>