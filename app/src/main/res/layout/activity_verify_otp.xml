<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black1"
    tools:context=".PhoneNumberActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font123"
        android:text="Billions of songs."
        android:layout_marginTop="150dp"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/otp_edit_text_1"
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:inputType="number"
            android:layout_margin="2dp"
            android:textColor="@color/white"
            android:maxLength="1"
            android:background="@drawable/pinbg"
            android:gravity="center"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/otp_edit_text_2"
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:inputType="number"
            android:layout_margin="2dp"
            android:background="@drawable/pinbg"
            android:maxLength="1"
            android:gravity="center"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/otp_edit_text_3"
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:textColor="@color/white"
            android:inputType="number"
            android:maxLength="1"
            android:gravity="center"
            android:background="@drawable/pinbg"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/otp_edit_text_4"
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:inputType="number"
            android:layout_margin="2dp"
            android:background="@drawable/pinbg"
            android:maxLength="1"
            android:gravity="center"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/otp_edit_text_5"
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:inputType="number"
            android:layout_margin="2dp"
            android:background="@drawable/pinbg"
            android:maxLength="1"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/otp_edit_text_6"
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:inputType="number"
            android:textColor="@color/white"
            android:layout_margin="2dp"
            android:background="@drawable/pinbg"
            android:maxLength="1"
            android:gravity="center"
            android:textSize="24sp" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/verify_button"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:fontFamily="@font/font123"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/red"

            android:text="Submit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:progressTint="@color/white"
            android:indeterminateTint="@color/white"
            android:backgroundTint="@color/white"
            android:visibility="gone"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></ProgressBar>
    </androidx.constraintlayout.widget.ConstraintLayout>



</LinearLayout>
